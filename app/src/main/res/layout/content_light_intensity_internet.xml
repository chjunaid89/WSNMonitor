<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mike.wsnmonitor.LightIntensityInternet"
    tools:showIn="@layout/activity_light_intensity_internet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visible Light"
        android:id="@+id/infrared_light"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infrared Light"
        android:id="@+id/visible_light"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#800000"
        android:id="@+id/visible_light_data"
        android:layout_below="@+id/infrared_light"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#800000"
        android:id="@+id/infrared_light_data"
        android:layout_below="@+id/visible_light"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lux"
        android:id="@+id/unit"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_below="@+id/infrared_light_data"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lux"
        android:id="@+id/unit1"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_below="@+id/visible_light_data"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor-ID:  "
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textColor="#800000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:  "
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:  "
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/sensor_id"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_toRightOf="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/date"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/time"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"/>

</RelativeLayout>
