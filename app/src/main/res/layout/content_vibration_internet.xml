<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mike.wsnmonitor.VibrationInternet"
    tools:showIn="@layout/activity_vibration_internet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-Axis"
        android:id="@+id/x_axis"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y-Axis"
        android:id="@+id/y_axis"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginTop="220dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Axis"
        android:id="@+id/z_axis"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginTop="320dp" />

    <TextView android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#800000"
        android:id="@+id/x_axis_data"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#800000"
        android:id="@+id/y_axis_data"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#800000"
        android:id="@+id/z_axis_data"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mg"
        android:id="@+id/unit"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mg"
        android:id="@+id/unit1"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mg"
        android:id="@+id/unit2"
        android:textSize="32sp"
        android:textColor="#800000"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor-ID:  "
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textColor="#800000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:  "
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:  "
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/sensor_id"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_toRightOf="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/date"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait"
        android:id="@+id/time"
        android:textSize="18sp"
        android:textColor="#800000"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"/>

</RelativeLayout>
